{% extends 'CCDNForumForumBundle:Common:Layout/base.html.twig' %}

{% set LayoutTemplate = ccdn_forum_forum.category.index.layout_template %}

{% block title %}{{- 'title.category.index' | trans({}, 'CCDNForumForumBundle') -}}{% endblock %}

{% block stylesheets_extra %}
{#
	<style type="text/css">
		section {border-bottom:none;}
		footer.page-footer {border-top:1px solid #eee;}
	</style>
	#}
{% endblock stylesheets_extra %}



{%- block sidebar -%}

	{%- spaceless -%}

	{{- parent() -}}

    {%- include 'CCDNForumForumBundle:Common:Layout/Sidebar/user_forum.html.twig' -%}

	{%- endspaceless -%}

{%- endblock sidebar -%}



{% block body_content %}

	{%- spaceless -%}

	{%- for category in categories -%}
		{%- include "CCDNForumForumBundle:User:Category/Partial/item_category.html.twig" -%}
	{%- else -%}
		<section class="row clearfix">
			<div class="well text-center">
				<span class="lead">
					{{- 'category.none' | trans({}, 'CCDNForumForumBundle') -}}
				</span>
			</div>
		</section>
	{%- endfor -%}

	{%- endspaceless -%}

{% endblock body_content %}

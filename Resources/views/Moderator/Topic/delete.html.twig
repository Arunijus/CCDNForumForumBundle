{% extends 'CCDNForumForumBundle::base.html.twig' %}

{% set LayoutTemplate = ccdn_forum_forum.topic.create.layout_template %}

{#
{% block title %}{{- truncDot('title.topic.delete' |trans({'%topic_title%': topic.getTitle }, 'CCDNForumForumBundle'), ccdn_forum_admin.seo.title_length) -}}{% endblock %}
#}

{% block body_content %}

	{%- spaceless -%}

	<section>
		{%- form_theme form ccdn_forum_forum.topic.create.form_theme -%}
	    <form action="{{- path('ccdn_forum_moderator_topic_delete_process', {'forumName': forum.name, 'topicId': topic.id } ) -}}" method="post" {{ form_enctype(form) }} class="form-horizontal" novalidate>
	        <fieldset>

				<div class="control-group form-title">
					<div class="controls">
						<h3>{{- 'title.topic.delete' |trans({'%topic_id%': topic.id}, 'CCDNForumForumBundle') -}}</h3>
					</div>
				</div>

				{{- form_errors(form) -}}

				{{- form_rest(form) -}}

	            <div class="form-actions">
	                <input type="submit" class="btn btn-primary" value="{{- 'form.button.topic.delete' | trans({}, 'CCDNForumForumBundle') -}}" name="submit[post]" id="submit[post]">

					{#<input type="submit" class="btn" value="{{- 'ccdn_forum_forum.form.button.post.preview' | trans({}, 'CCDNForumForumBundle') -}}" name="submit_preview">#}

	                <a class="btn" href="{{- path('ccdn_forum_user_topic_show', {'forumName': forum.name, 'topicId': topic.getId}) -}}">
						{{- 'form.button.cancel' |trans({}, 'CCDNForumForumBundle') -}}
					</a>
	            </div>
	        </fieldset>
	    </form>
	</section>

	{%- endspaceless -%}

{% endblock body_content %}

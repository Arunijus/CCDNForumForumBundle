<div class="common_box_5">
	<div class="common_box_panel">
		<span class="common_h2">
			<img class="icon_16x16" width="16" height="16" src="{{ asset('bundles/ccdncomponentcommon/images/icons/Black/16x16/16x16_category.png') }}" alt="icon">
			<a class="heading_link" href="{{ path('cc_forum_category_show', {'category_id': category.id }) }}">{{ category.name }}</a>
		</span>
	</div>
	<div class="common_table_panel">
		<table class="common_list">
			<thead>
				<tr>
					<th></th>
					<th>{{ 'board.table.head.board' | trans({}, 'CCDNForumForumBundle') }}</th>
					<th>{{ 'board.table.head.topic_count' | trans({}, 'CCDNForumForumBundle') }}</th>
					<th>{{ 'board.table.head.post_count' | trans({}, 'CCDNForumForumBundle') }}</th>
					<th>{{ 'board.table.head.last_post' | trans({}, 'CCDNForumForumBundle') }}</th>
				</tr>
			</thead>
			<tbody>
			{% for row, board in category.boards %}
				{% include "CCDNForumForumBundle:Category:item_board.html.twig" %}
			{% else %}
				<tr>
					<td class="h_align_centre v_align_middle" colspan="4" width="100%" >	
						{{ 'category.table.empty' | trans({}, 'CCDNForumForumBundle') }}
					</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
</div>
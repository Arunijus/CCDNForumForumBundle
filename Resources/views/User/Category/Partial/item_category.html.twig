{%- spaceless -%}

	<h3 title="{{- category.name -}}">
		<a href="{{- path('ccdn_forum_user_category_show', {'forumName': forum.name, 'categoryId': category.id }) -}}" title="{{- category.name -}}">
			{{- truncDot(category.name, ccdn_forum_forum.seo.title_length) -}}
		</a>
	</h3>

	<section>
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th class="center" style="width:32px;">&nbsp;</th>
					<th class="left">{{- 'generic.thead.board' | trans({}, 'CCDNForumForumBundle') -}}</th>
					<th class="center" style="width:60px;">{{- 'generic.thead.topics' | trans({}, 'CCDNForumForumBundle') -}}</th>
					<th class="center" style="width:60px;">{{- 'generic.thead.posts' | trans({}, 'CCDNForumForumBundle') -}}</th>
					<th class="center" style="width:170px;">{{- 'generic.last_post' | trans({}, 'CCDNForumForumBundle') -}}</th>
				</tr>
			</thead>
			<tbody>
				{%- for row, board in category.boards -%}
					{%- include "CCDNForumForumBundle:User:Category/Partial/item_board.html.twig" -%}
				{%- else -%}
					<tr>
						<td class="center" colspan="5" style="width:100%;">
							{{- 'category.boards.none' | trans({}, 'CCDNForumForumBundle') -}}
						</td>
					</tr>
				{%- endfor -%}
			</tbody>
		</table>
	</section>

	<br>
{%- endspaceless -%}

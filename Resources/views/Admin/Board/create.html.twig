{% extends 'CCDNForumForumBundle:Common:Layout/base.html.twig' %}

{% set LayoutTemplate = ccdn_forum_forum.post.edit_topic.layout_template %}

{%- block title -%}
	{{- 'title.admin.manage-boards.create' |trans({}, 'CCDNForumForumBundle') -}}
{%- endblock -%}



{% block sub_title %}
	<a href="{{ path('ccdn_forum_user_category_index') }}">
		Forum Admin
	</a>
{% endblock sub_title %}



{%- block sidebar -%}

	{%- spaceless -%}
	
	{{- parent() -}}

    {%- include 'CCDNForumForumBundle:Common:Layout/Sidebar/sidebar_admin.html.twig' -%}

	{%- endspaceless -%}
	
{%- endblock sidebar -%}



{% block body_content %}

    {%- spaceless -%}

	<section class="clearfix">
	    {%- form_theme form ccdn_forum_forum.post.edit_topic.form_theme -%}
	    <form action="{{- path('ccdn_forum_admin_board_create_process', {'forum_filter': forum_filter, 'category_filter': category_filter}) -}}"
		 method="post" {{ form_enctype(form) }} class="form-horizontal" novalidate>
	        <fieldset>

				<div class="form-group">
					<div class="col-lg-offset-2 col-lg-10">
						<h4>Create New Board</h4>
					</div>
				</div>

				{{- form_errors(form) -}}

				{{- form_rest(form) -}}

				<div class="form-group">
					<div class="col-lg-offset-2 col-lg-10">
		                <input type="submit" class="btn btn-primary" value="Save" name="submit[post]" id="submit[post]">

		                <a class="btn btn-default" href="{{- path('ccdn_forum_admin_board_list', {'forum_filter': forum_filter, 'category_filter': category_filter}) -}}">
							{{- 'form.button.cancel' |trans({}, 'CCDNForumForumBundle') -}}
						</a>
					</div>
	            </div>
				
	        </fieldset>
	    </form>
	</section>

    {%- endspaceless -%}

{% endblock body_content %}

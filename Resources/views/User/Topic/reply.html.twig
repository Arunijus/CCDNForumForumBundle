{% extends 'CCDNForumForumBundle:User:Layout/base.html.twig' %}

{% set LayoutTemplate = ccdn_forum_forum.topic.reply.layout_template %}

{% block title %}{{- truncDot('title.topic.reply' | trans({'%topic_title%': topic.getTitle }, 'CCDNForumForumBundle'), ccdn_forum_forum.seo.title_length) -}}{% endblock %}


{% block body_content %}

	{%- spaceless -%}

	<section>
		{%- form_theme form ccdn_forum_forum.topic.reply.form_theme -%}
		<form action="{{- path('ccdn_forum_user_topic_reply_process', {'forumName': forum.name, 'topicId': topic.id } ) -}}" method="post" {{ form_enctype(form) }} class="form-horizontal" novalidate>
			<fieldset>

				<div class="control-group form-title">
					<div class="controls">
						<h4>{{- 'title.topic.reply' | trans({}, 'CCDNForumForumBundle') -}}</h4>
						<h5>{{- topic.getTitle -}}</h5>
					</div>
				</div>

				{{- form_errors(form) -}}

				{{- form_widget(form) -}}

				<div class="form-actions">
					<input type="submit" class="btn btn-primary" value="{{- 'form.button.topic.reply' | trans({}, 'CCDNForumForumBundle') -}}" name="submit[post]" id="submit[post]">
					{#
					<input type="submit" class="btn" value="{{- 'ccdn_forum_forum.form.button.post.preview' | trans({}, 'CCDNForumForumBundle') -}}" name="submit_preview">
					#}
					<a class="btn" href="{{- path('ccdn_forum_user_topic_show', {'forumName': forum.name, 'topicId': topic.id}) -}}">
						{{- 'form.button.cancel' |trans({}, 'CCDNForumForumBundle') -}}
					</a>
				</div>
			</fieldset>
		</form>
	</section>

    {%- if preview is defined -%}
        {%- if preview is not empty -%}
            {%- include "CCDNForumForumBundle:User:Post/Partial/post_preview.html.twig" with {'post': preview} -%}
        {%- endif -%}
    {%- endif -%}

	{%- include 'CCDNForumForumBundle:User:Topic/Partial/transcript.html.twig' with {'topic': topic } -%}

	{%- endspaceless -%}

{% endblock body_content %}

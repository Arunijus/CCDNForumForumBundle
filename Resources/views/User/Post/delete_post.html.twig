{% extends 'CCDNForumForumBundle::base.html.twig' %}

{% set LayoutTemplate = ccdn_forum_forum.post.delete_post.layout_template %}

{% block title %}{{- truncDot('title.post.delete' |trans({'%post_id%': post.id}, 'CCDNForumForumBundle'), ccdn_forum_forum.seo.title_length) -}}{% endblock %}


{% block body_content %}

	{%- spaceless -%}

	<section>
	    {%- form_theme form ccdn_forum_forum.post.edit_post.form_theme -%}
	    <form action="{{- path('ccdn_forum_user_post_delete_process', {'forumName': forum.name, 'postId': post.id } ) -}}" method="post" {{ form_enctype(form) }} class="form-horizontal" novalidate>
	        <fieldset>

				<div class="control-group form-title">
					<div class="controls">
						<h3>{{- 'title.post.delete' |trans({'%post_id%': post.id}, 'CCDNForumForumBundle') -}}</h3>
					</div>
				</div>

				{{- form_errors(form) -}}

				{{- form_rest(form) -}}

	            <div class="form-actions">
	                <input type="submit" class="btn btn-primary" value="{{- 'form.button.post.delete' | trans({}, 'CCDNForumForumBundle') -}}" name="submit[post]" id="submit[post]">

					{#<input type="submit" class="btn" value="{{- 'ccdn_forum_forum.form.button.post.preview' | trans({}, 'CCDNForumForumBundle') -}}" name="submit_preview">#}

	                <a class="btn" href="{{- path('ccdn_forum_user_topic_show', {'forumName': forum.name, 'topicId': post.getTopic.getId}) -}}">
						{{- 'form.button.cancel' |trans({}, 'CCDNForumForumBundle') -}}
					</a>
	            </div>
	        </fieldset>
	    </form>
	</section>

	{%- endspaceless -%}

{% endblock body_content %}
